generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PatientData {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  shareId   String   @unique
  data      Json
  createdAt DateTime @default(now())
  expiresAt DateTime // Set this value in your application code to "now + 5 minutes"

  @@index([expiresAt], map: "ttl_index")
  @@map("patient_data")
}

model WebhookLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  source    String
  payload   Json
  success   Boolean
  error     String?
  createdAt DateTime @default(now())

  @@map("webhook_logs")
}
